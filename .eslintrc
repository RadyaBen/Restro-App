{
	"extends": "react-app",
	"rules": {
		"no-console": "warn",
		"no-trailing-spaces": ["error", {
			"skipBlankLines": true,
			"ignoreComments": true
		}],
		"no-extra-semi": "error",
		"prefer-const": "error",
		"quotes": ["error", "single"],
		"jsx-quotes": ["error", "prefer-single"],
		"max-len": ["error", {
			"code": 120,
			"comments": 80
		}],
		"comma-dangle": ["error", "always-multiline"],
		"semi": ["warn", "always"],
		"import/order": ["error", {
			"groups": [
				"builtin",
				"external",
				"internal",
				["parent", "sibling", "index"]
			],
			"pathGroups": [{
				"pattern": "@/**",
				"group": "internal"
			}],
			"newlines-between": "always"
		}]
	}
}